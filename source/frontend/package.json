{
    "name": "pulse",
    "version": "0.0.0",
    "scripts": {
        "ng": "ng",
        "start": "npm run nghm -- serve --open --project=pulse",
        "pulse-openapi": "npx ng-openapi-gen --config projects/pulse/ng-openapi-gen.json",
        "pulse-build": "npm run build -- --project=pulse",
        "pulse-lint": "npm run nghm -- lint --project=pulse",
        "sdk-build": "npm run build -- --project=pulse-sdk",
        "sdk-lint": "npm run nghm -- lint --project=pulse-sdk",
        "watch": "ng build --watch --configuration development",
        "lint": "npm run sdk-lint && npm run pulse-lint",
        "nghm": "node --max_old_space_size=4096 ./node_modules/@angular/cli/bin/ng",
        "build": "npm run nghm -- build",
        "sdk-build:prod": "npm run build -- --configuration production --project=pulse-sdk",
        "pulse-build:prod": "NODE_ENV=production npm run build -- --configuration production --project=pulse",
        "build:prod": "npm run sdk-build:prod && npm run pulse-build:prod",
        "test": "ng test",
        "version": "npm version --no-git-tag-version --allow-same-version"
    },
    "private": true,
    "dependencies": {
        "@angular/animations": "~12.2.0",
        "@angular/cdk": "^12.2.8",
        "@angular/common": "~12.2.0",
        "@angular/compiler": "~12.2.0",
        "@angular/core": "~12.2.0",
        "@angular/forms": "~12.2.0",
        "@angular/platform-browser": "~12.2.0",
        "@angular/platform-browser-dynamic": "~12.2.0",
        "@angular/router": "~12.2.0",
        "@microsoft/signalr": "^5.0.11",
        "@ngrx/store": "^12.4.0",
        "@ngrx/store-devtools": "^12.4.0",
        "@ngx-translate/core": "^13.0.0",
        "@ngx-translate/http-loader": "^6.0.0",
        "chart.js": "^3.6.0",
        "jwt-decode": "^3.1.2",
        "ng2-trim-directive": "^2.3.4",
        "ngrx-store-localstorage": "^12.0.1",
        "ngx-device-detector": "^2.1.1",
        "ngx-logger": "^4.3.3",
        "ngx-translate": "0.0.1-security",
        "ngx-webstorage-service": "^4.1.0",
        "normalize-scss": "^7.0.1",
        "primeflex": "^3.0.1",
        "primeicons": "^4.1.0",
        "primeng": "^12.2.0",
        "rxjs": "~7.3.0",
        "string-template": "^1.0.0",
        "tslib": "^2.3.0",
        "zone.js": "~0.11.4"
    },
    "devDependencies": {
        "@angular-devkit/build-angular": "^12.2.7",
        "@angular-eslint/builder": "^12.6.1",
        "@angular-eslint/eslint-plugin": "^12.6.1",
        "@angular-eslint/eslint-plugin-template": "^12.6.1",
        "@angular-eslint/schematics": "^12.6.1",
        "@angular-eslint/template-parser": "^12.6.1",
        "@angular/cli": "~12.2.7",
        "@angular/compiler-cli": "~12.2.0",
        "@types/jasmine": "~3.8.0",
        "@types/node": "^12.11.1",
        "@types/string-template": "^1.0.2",
        "@typescript-eslint/eslint-plugin": "^5.3.0",
        "@typescript-eslint/parser": "^5.3.0",
        "eslint": "^7.32.0",
        "eslint-config-airbnb-typescript": "^14.0.0",
        "eslint-config-prettier": "^8.3.0",
        "eslint-plugin-import": "^2.25.2",
        "eslint-plugin-prettier": "^4.0.0",
        "jasmine-core": "~3.8.0",
        "karma": "~6.3.0",
        "karma-chrome-launcher": "~3.1.0",
        "karma-coverage": "~2.0.3",
        "karma-jasmine": "~4.0.0",
        "karma-jasmine-html-reporter": "~1.7.0",
        "ng-openapi-gen": "^0.18.0",
        "ng-packagr": "^12.2.2",
        "prettier": "^2.4.1",
        "stylelint-config-recommended": "^5.0.0",
        "typescript": "~4.3.5"
    }
}
